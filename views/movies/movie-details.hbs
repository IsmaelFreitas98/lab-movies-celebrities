<h2>Movie details</h2>
<p>
    Title: {{movie.title}}<br/>
    Genre: {{movie.genre}}<br/>
    Plot: {{movie.plot}}<br/>
</p>

{{#each movie.cast}}
    <p>
        Celebrity: {{this.name}} <br>
        Occupation: {{this.occupation}} <br>
        Catch Phrase: "{{this.catchPhrase}}" 
    </p>
{{/each}}
<form action="/movies/{{movie._id}}/delete" method="POST">
    <button type="submit">Delete</button>
</form>

<form action="/movies/{{movie._id}}/edit" method="GET">
    <button type="submit">Edit</button>
</form>